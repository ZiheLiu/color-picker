{
  "name": "react-component-start-kit",
  "version": "1.0.0",
  "description": "Start Kit for react component",
  "main": "index.ts",
  "author": "ZiheLiu",
  "license": "MIT",
  "scripts": {
    "build": "webpack --config ./config/webpack.config.js",
    "test:watch": "jest --watch --verbose",
    "test": "jest --verbose --coverage",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "lint:ts": "tsc --project ./stories/tsconfig.json && tslint --project ./stories/tsconfig.json --config tslint.json",
    "precommit": "lint-staged"
  },
  "typings": "typings/index.d.ts",
  "devDependencies": {
    "@storybook/addon-actions": "^3.3.11",
    "@storybook/addon-links": "^3.3.11",
    "@storybook/addons": "^3.3.11",
    "@storybook/react": "^3.3.11",
    "@types/jest": "^22.1.1",
    "@types/node": "^9.4.0",
    "@types/react": "^16.0.35",
    "@types/react-dom": "^16.0.3",
    "@types/react-test-renderer": "^16.0.0",
    "@types/storybook__react": "^3.0.6",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.1.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.18",
    "css-loader": "^0.28.9",
    "extract-text-webpack-plugin": "^3.0.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "less": "^2.7.3",
    "less-loader": "^4.0.5",
    "lint-staged": "^6.1.0",
    "prettier": "1.10.2",
    "prettier-tslint": "^0.3.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "style-loader": "^0.20.1",
    "ts-jest": "^22.0.2",
    "ts-loader": "^3.3.1",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.5.3",
    "tslint-react": "^3.4.0",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0",
    "webpack-node-externals": "^1.6.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "lint:ts",
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(ts|tsx)$"
    ],
    "testEnvironment": "jsdom",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "json",
      "js",
      "jsx",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "useBabelrc": true,
        "mapCoverage": true
      }
    },
    "setupTestFrameworkScriptFile": "./src/tests/setup.ts",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "mapCoverage": true
  }
}
